
<Seite2>
    name: 'seite2'

    MDFloatLayout:
        id: box
        orientation: 'vertical'
        size: root.width, root.height

        MDRectangleFlatButton:
            id: seiten_nav_knopf
            text: 'Zur Startseite'
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            text_color: 0, 0, 0, 1
            on_release: root.seiteAufrufen(seiten_name='startseite')

        MDRectangleFlatButton:
            id: seiten_nav_knopf2
            text: 'Zur Seite 3'
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            text_color: 0, 0, 0, 1
            on_release: root.seiteAufrufen(seiten_name='seite3')

        MDRectangleFlatButton:
            id: test_knopf
            text: "test 2 knopf"
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            text_color: 0, 0, 0, 1
            on_release:
                root.knopfdruckCallback()

        MDLabel:
            id: test_label
            text: "test 2 Label"
            halign: 'center'
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
